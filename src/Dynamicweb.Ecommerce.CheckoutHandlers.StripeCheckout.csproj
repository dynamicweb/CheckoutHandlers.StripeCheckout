<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<VersionPrefix>10.3.0</VersionPrefix>
		<AssemblyVersion>1.0.0.0</AssemblyVersion>
		<Title>Stripe Checkout</Title>
		<Description>Stripe Checkout handler</Description>
	</PropertyGroup>
	<PropertyGroup>
		<PackageProjectUrl>https://doc.dynamicweb.com/</PackageProjectUrl>
		<PackageTags>Dynamicweb dw10 addin commerce payment</PackageTags>
		<Product>Dynamicweb CMS</Product>
		<Company>Dynamicweb Software A/S</Company>
		<Authors>Dynamicweb Software A/S</Authors>
		<Copyright>Copyright © 2023 Dynamicweb Software A/S</Copyright>
	</PropertyGroup>
	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<PackageIcon>stripe-logo.png</PackageIcon>
	</PropertyGroup>
	<ItemGroup>
	  <None Remove="Updates\checkouthandler_error.html" />
	  <None Remove="Updates\Post_custom.html" />
	  <None Remove="Updates\Post_simple.html" />
	</ItemGroup>
	<ItemGroup>
	  <EmbeddedResource Include="Updates\checkouthandler_error.html" />
	  <EmbeddedResource Include="Updates\Post_custom.html" />
	  <EmbeddedResource Include="Updates\Post_simple.html" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Dynamicweb" Version="10.3.4" />
		<PackageReference Include="Dynamicweb.Core" Version="10.3.4" />
		<PackageReference Include="Dynamicweb.Ecommerce" Version="10.3.4" />
		<PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
	</ItemGroup>
	<ItemGroup>	
	  <None Update="stripe-logo.png">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>
</Project>
